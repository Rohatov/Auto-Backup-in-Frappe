# ============================================
# Frappe Auto-Backup Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Frappe Configuration
# --------------------
# Path to your frappe-bench directory
FRAPPE_BENCH_PATH=/home/frappe/frappe-bench

# Your Frappe site name
SITE_NAME=yoursite.localhost

# Backup Configuration
# --------------------
# Directory to store backups (will be created if not exists)
BACKUP_DIR=/home/frappe/backups

# Number of days to keep old backups (older will be deleted)
BACKUP_RETENTION_DAYS=7

# Telegram Configuration
# ----------------------
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Chat ID of your private channel (use @userinfobot to get ID)
# For channels, prefix with -100 (e.g., -1001234567890)
TELEGRAM_CHAT_ID=-1001234567890

# Logging Configuration
# ---------------------
# Path to log file
LOG_FILE=/var/log/frappe-backup.log
